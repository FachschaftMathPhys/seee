\begin{tikzpicture}
\globalQuestion{
  <%= question_text %>\\
  {\globalNumberStyle
    <%=t :answers%>: <%=sc%>,
    <%=t :abstentions%>: <%=answ[:abstentions]%>}
}
<%
  a = answ.delete_if { |k,v| !k.is_a?(String) }.keys
  a.sort! { |x,y| answ[x] <=> answ[y] }
%>
\multiHorizontalBars{<%=a.join(",")%>}{<%=answ.values_at(*a).join(",")%>}{<%=sc%>}
\end{tikzpicture}
