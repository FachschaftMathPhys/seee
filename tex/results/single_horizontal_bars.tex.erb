\begin{tikzpicture}
\globalQuestion{
  <%= q.text.strip_common_tex %>\\
  {\globalNumberStyle
    <%=t :answers%>: <%=sc%>,
    <%=t :abstentions%>: <%=answ[:abstentions]%>}
}
<%
  a = q.get_answers.strip_common_tex.delete_if { |x| answ[x] <= 0 }
  a.sort! { |x,y| answ[x] <=> answ[y] }
%>
\singleHorizontalBars{<%=a.join(",")%>}{<%=answ.values_at(*a).join(",")%>}
\end{tikzpicture}
