<% form_for(@form) do |f| %>
  <fieldset>
    <h1>New form</h1>
    <%= f.error_messages %>

    <table class="large_text_area">
      <% for item in
        [
          [f.label(:semester_id),  f.collection_select(:semester_id, Semester.find(:all, :order => "id").reverse, :id, :title), "required"],
          [f.label(:name),      f.text_field(:name),     "required"],
          [f.label(:content),   f.text_area(:content),   "required"],

        ]
      %>
        <tr style="background: #<%= cycle('efefef', 'fff') %>">
          <th><%= item.shift %></th>
          <td><%= item.shift %></td>
          <% for data in item do %> <td><%=h data %></td> <% end %>
        </tr>
      <% end %>
    </table>

  <p>
    <%= f.submit "Create new form", :disable_with => "Saving&hellip;" %>
    <%= link_to 'Cancel', forms_path %>
  </p>

  </fieldset>
<% end %>



