<fieldset>
  <h1>Listing forms</h1>
  <%= link_to 'New form', new_form_path %><br/><br/>


  <table>
    <tr>
      <th>Semester</th>
      <th>Name</th>
      <th colspan="3">Actions</th>
    </tr>

  <% for form in @forms.sort { |x,y|
      s = x.semester_id <=> y.semester_id
      s == 0 ? (x.name <=> y.name) : s
    } %>
    <tr style="background:#<%= cycle('efefef', 'fff')%>">
      <td><%=h form.semester.title %></td>
      <td><%= link_to form.name, form %></td>

      <% if form.critical? %>
        <td colspan="2">Semester critical</td>
      <% else %>
        <td><%= link_to 'Edit form', edit_form_path(form) %></td>
        <td><%= link_to 'Destroy', form, :confirm => "Do you really want to DESTROY #{form.name} in #{form.semester.title}?", :method => :delete %></td>
      <% end %>
    </tr>
  <% end %>
  </table>
</fieldset>
