<h1>Listing forms</h1>

<table>
  <tr>
    <th>Semester</th>
    <th>Name</th>
    <th>Content</th>
  </tr>

<% for form in @forms.sort {|y,x| x.semester_id <=> y.semester_id} %>
  <tr>
    <td><%=h form.semester.title %></td>
    <td><%=h form.name %></td>
    <td><%= link_to 'Show', form %></td>
    <td><%= link_to 'Edit', edit_form_path(form) %></td>
    <td><%= link_to 'Destroy', form, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

