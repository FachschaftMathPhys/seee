<fieldset>
  <h1>New semester</h1>
  <%= error_messages_for :semester %>

  <% form_for(@semester) do |f| %>
    <table>
      <tr style="background:#efefef">
        <th>Firstday</th>
        <td><%= f.date_select :firstday %></td>
        <td>required</td>
      </tr>

      <tr>
        <th>Lastday</th>
        <td><%= f.date_select :lastday %></td>
        <td>required</td>
      </tr>

      <tr style="background:#efefef">
        <th><%= f.label :title %></th>
        <td><%= f.text_field :title %></td>
        <td>required</td>
      </tr>
    </table>
    <p>
      <%= f.submit "Create new semester" %>
      <%= link_to 'Cancel', semesters_path %>
    </p>
  <% end %>


</fieldset>
