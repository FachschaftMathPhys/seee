<h1>Listing semesters</h1>

<table>
  <tr>
    <th>Firstday</th>
    <th>Lastday</th>
    <th>Title</th>
  </tr>

<% for semester in @semesters %>
  <tr>
    <td><%=h semester.firstday %></td>
    <td><%=h semester.lastday %></td>
    <td><%=h semester.title %></td>
    <td><%= link_to 'Show', semester %></td>
    <td><%= link_to 'Edit', edit_semester_path(semester) %></td>
    <td><%= link_to 'Destroy', semester, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
