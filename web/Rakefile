#!/usr/bin/env rake
# Add your own tasks in files placed in lib/tasks ending in .rake,
# for example lib/tasks/capistrano.rake, and they will automatically be available to Rake.

require File.expand_path('../config/application', __FILE__)

Seee::Application.load_tasks

namespace :cache do
  desc "Removes all untracked files in the public folder"
  task :clear do
    Dir.chdir(File.join(File.dirname(__FILE__), 'public')) do
      # removes all uncommited files in this folder
      `git clean -df`
      # removes ignored files in this folder
      `git clean -dfX`
    end
  end
end
